                ${game.classification?.gameplay_features?.length > 0 ? `<div><span class="text-terminal-white">Gameplay:</span> <span class="text-terminal-yellow">${game.classification.gameplay_features.slice(0, 3).join(', ')}</span></div>` : ''}
